#!/bin/bash

# Check if the user has provided a directory as an argument
if [ -z "$1" ]; then
  echo "Usage: $0 /path/to/directory"
  exit 1
fi

# Use the first argument as the directory path
DIRECTORY="$1"

# Check if the directory exists
if [ ! -d "$DIRECTORY" ]; then
  echo "Error: Directory $DIRECTORY does not exist."
  exit 1
fi

# Loop through each .mcap file in the specified directory
for file in "$DIRECTORY"/*.mcap; do
  if [ -f "$file" ]; then
    # Extract the file name without the extension and append -rec
    base_name="${file%.mcap}-rec.mcap"
    
    # Echo the modified file name
    echo "Processing file: $base_name"

    # Replace this with the actual command you want to run on each .mcap file
    mcap recover "$file" -o "$base_name"
  fi
done

for file in "$DIRECTORY"/*.mcap; do
  if [ -f "$file" ]; then
    # Check if the file does NOT end with -rec.mcap
    if [[ ! "$file" =~ -rec\.mcap$ ]]; then
      echo "Removing file: $file"
      rm "$file"
    fi
  fi
done
